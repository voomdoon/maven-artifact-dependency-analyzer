<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS}{GMT+0} %p\t(%c): %m%n%throwable" />
		</Console>
		<RollingFile name="File" filePattern="log/%d{yyyy-MM}{GMT+0}/%d{yyyy-MM-dd}{GMT+0}/maven-artifact-dependency-analyzer_%d{yyyy-MM-dd_HH-mm-ss.SSS}{GMT+0}.log">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS}{GMT+0} %p\t(%c): %m%n%throwable" />
			<Policies>
				<OnStartupTriggeringPolicy />
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="TRACE">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>
